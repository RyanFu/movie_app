#content
  .movie_content
    .span3
      .movie-show.well
        .movie-img
          = link_to image_tag(@movie.poster_url), "#"
        .movie-buttons
          = button_to "預告片","test", :class => "btn btn-danger", "data-toggle" => "modal", 'data-target' => "#myModal"
        %span.record-count
          %i.icon-map-marker
          = @movie.records.size
        %span.like-count
          %i.icon-thumbs-up
          = @movie.good_count
    .span9
      .movie-reviews
        .well
          .movie-title
            %h3= @movie.name
            %h3= @movie.name_en
          .movie-intro
            = @movie.intro
          = button_to "評論","#", :class => "btn btn-success"
          = button_to "時刻表","#", :class => "btn btn-info"
          = button_to "訂票","#", :class => "btn btn-info"
        .well
          熱門評論
          .records
            - @records.each do |r|
              .record
                = image_tag (user_avatar(r.user.fb_id)), :class => "img-polaroid"
                = r.user.name
                = r.comment
                %span.like-count
                  %i.icon-thumbs-up
                  = r.love_count
        
